extends layout

block plantillapug
    h1(style='color:blue') Ingrese Producto
    .row 
        .col 
            form(action='/productos' method='POST')
                .mb-3
                    i
                        label.form-label(for='title') Nombre
                    input#title.form-control(type='text' aria-describedby='emailHelp' name='title' required=true)
                
                .mb-3
                    i
                        label.form-label(for='price') Precio
                    input#price.form-control(type='number' name='price' required=true)
                
                .mb-3
                    i
                        label.form-label(for='thumbnail') Foto URL
                    input#thumbnail.form-control(type='text' name='thumbnail')

                button.btn.btn-primary(type='submit') Guardar
                br
                br
        .col
            if productos.length
                table.table
                    thead 
                        tr 
                            th id 
                            th Titulo 
                            th Precio 
                            th Imagen
                    tbody
                        each producto in productos 
                            tr 
                                td=producto.id
                                td=producto.title
                                td=producto.price
                                td
                                    img(src=producto.thumbnail)
            else 
                .alert.alert-warning.alert-dismissible.fade.show(role='alert')
                    strong no hay productos
                    button.btn-close(data-bs-dismiss="alert" aria-label="Close")
                    
    
    h1(style='color: blue') Centro de Mensajes
            
    .row 
        .col 
            form.row.g-3( onsubmit='return addMessage()')    
                .col-auto
                    input#usuario.form-control(type="email" name='usuario' placeholder='@' required=true)
                .col-auto
                    input#text.form-control(type="text" placeholder='Enviar un mensaje')
                .col-auto
                    input.btn.btn-primary.mb-3(type="submit" value='Enviar')
                
        .col 
            #chat
